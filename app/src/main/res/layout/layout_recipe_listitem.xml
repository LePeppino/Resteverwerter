<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="6dp"
    android:background="#fff"
    android:id="@+id/parentLayout"
    android:visibility="visible">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/recipeImageId"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipeTitleId"
        android:text="@string/recipe_placeholder"
        android:layout_toEndOf="@id/recipeImageId"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipeDescriptionId"
        android:text="@string/recipe_desc_placeholder"
        android:layout_toEndOf="@id/recipeImageId"
        android:layout_below="@id/recipeTitleId"
        android:textColor="@color/colorTextSecondary"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="16sp"
        android:ellipsize="end"/>


</RelativeLayout>